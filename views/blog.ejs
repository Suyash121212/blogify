<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= blog.title %> | Blog
        </title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>

            <% if (blog.coverImageURL) { %>
                <img src="<%= blog.coverImageURL %>" alt="Cover image" width="250px" />
                <% } else { %>
                    <p><em>No cover image available.</em></p>
                    <% } %>

                        <div class="mt-3">
                            <pre><%= blog.body %></pre>
                        </div>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="profileImage" width="50px" height="50px">
            <%= blog.createdBy.fullName%>
        </div>

        <div class="container">
            <h3>comments ( <%= comments.length %>)</h3>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">

                        <input type="text" class="form-control" id="content" aria-describedby="emailHelp" name="content"
                            placeholder="Enter ur Comment">
                        <button type="submit" class="btn btn-primary">Add</button>
                </form>
                
                <% } %>
                <div class="mt-3">
                    <% comments.forEach(comment=> { %>
                        <img src="<%= comment.createdBy.profileImageURL %>" alt="profileImage" width="50px">
                        <%= comment.createdBy.fullName %>
                        <pre><%= comment.content %></pre>
                        <% }) %>
                </div>
        </div>
        <%- include('./partials/script') %>
</body>

</html>